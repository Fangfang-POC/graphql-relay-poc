{
  "name": "graphql-relay-poc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "concurrently --kill-others --names \"server,compiler\" \"yarn watch_relay\" \"react-scripts start\"",
    "build": "react-scripts build",
    "relay": "relay-compiler",
    "watch_relay": "npm-watch relay",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "watch": {
    "relay": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx",
      "ignore": "src/__generated__/*",
      "verbose": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-relay": "^13.2.0",
    "react-scripts": "5.0.0",
    "relay-runtime": "^13.2.0",
    "typescript": "^4.6.2",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@types/react-relay": "^13.0.1",
    "babel-plugin-relay": "^13.2.0",
    "concurrently": "^4.1.0",
    "npm-watch": "^0.11.0",
    "relay-compiler": "^13.2.0"
  }
}
